# === Compiler Options =================================================================================================
CC=gcc
CFLAGS=-c -Wall -pedantic


# === File Directories =================================================================================================
INC=./inc
SRC=./src
BLD=./build


# === Program Target ===================================================================================================
OBJECTS=main.o endian.o romPatcher.o
EXE=patcher

all: $(OBJECTS)
	$(CC) $(BLD)/*.o -o $(BLD)/$(EXE)


# === Source File Targets ==============================================================================================
$(OBJECTS): %.o: $(SRC)/%.c
	$(CC) $(CFLAGS) $^ -o $(BLD)/$@ -I$(INC)


# === Utility Targets ==================================================================================================
clean:
	rm $(BLD)/*.o
	rm $(BLD)/$(EXE)

run:
	$(BLD)/$(EXE)
